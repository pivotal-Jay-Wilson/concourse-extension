{
	"name": "vscode-concourse",
	"version": "0.0.1",
	"displayName": "concourse",
	"publisher": "jwilson",
	"description": "Concourse Tree View",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:consourseOutline"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "consourse-explorer",
					"title": "Consourse Explorer",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"consourse-explorer": [
				{
					"id": "consourseOutline",
					"name": "Consourse Outline"
				}
			]
		},
		"commands": [
			{
				"command": "consourseOutline.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "consourseOutline.pause",
				"title": "Toggle Pause"
			},
			{
				"command": "consourseOutline.excute",
				"title": "Execute"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "consourseOutline.refreshEntry",
					"when": "view == consourseOutline",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "consourseOutline.pause",
					"when": "view == consourseOutline && viewItem == pipeline || viewItem == job"
				},
				{
					"command": "consourseOutline.excute",
					"when": "view == consourseOutline && viewItem == job"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"@types/eventsource": "^1.1.2",
		"@types/js-yaml": "^3.12.1",
		"axios": "^0.19.2",
		"eventsource": "^1.0.7",
		"js-yaml": "^3.13.1",
		"moment": "^2.24.0"
	}
}
